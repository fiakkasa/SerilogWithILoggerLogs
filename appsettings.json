{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Filters.Expressions"
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentUserName",
      "WithEnvironmentName",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId",
      "WithThreadName",
      "WithAssemblyInformationalVersion"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      // write all logs
      //      {
      //        "Name": "File",
      //        "Args": {
      //          "path": "Logs/app-.log",
      //          "rollingInterval": "Hour",
      //          "retainedFileCountLimit": 720,
      //          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact",
      //          "shared": true
      //        }
      //      },
      // write all logs except Service using namespace + class name
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "SourceContext = 'SerilogWithILoggerLogs.Service'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs/app-filtered-.log",
                  "rollingInterval": "Hour",
                  "retainedFileCountLimit": 720,
                  "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact",
                  "shared": true
                }
              }
            ]
          }
        }
      },
      // write only Service logs using namespace + class name
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "SourceContext = 'SerilogWithILoggerLogs.Service'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs/service-.log",
                  "rollingInterval": "Hour",
                  "retainedFileCountLimit": 720,
                  "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact",
                  "shared": true
                }
              }
            ]
          }
        }
      }
    ]
  }
}